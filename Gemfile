source 'http://rubygems.org'

gem 'rails', '~> 3.1.10'
gem 'pg'
gem 'jquery-rails'
gem 'dalli'

gem 'formtastic'
gem 'cancan'
gem 'squeel'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  # Pretty printed test output
  gem 'turn'
end

group :development do
  gem 'active_reload'
end

group :production do
  gem 'thin'
  gem 'foreman'
  gem 'exception_notification', '2.6.1'
end
